<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<GridPane
        xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" fx:id="root">

    <VBox alignment="CENTER" spacing="20">
        <Label text="IT Asset Manager"/>
        <TextField fx:id="usernameField">Username</TextField>
        <TextField fx:id="passwordField">Password</TextField>
        <Button text="Login" onAction="#login"/>

    </VBox>


</GridPane>